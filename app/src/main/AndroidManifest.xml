<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="songer.michael.controlpanel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity"> </activity>

        <activity
            android:name=".LightControlActivity"
            android:label="Light Control"
            android:parentActivityName=".MainActivity"> </activity>

        <activity
            android:name=".MusicControlActivity"
            android:label="Music Control"
            android:parentActivityName=".MainActivity"> </activity>

        <activity
            android:name=".AlarmsActivity"
            android:label="Alarms"
            android:parentActivityName=".MainActivity"> </activity>

        <activity
            android:name=".PcControlActivity"
            android:label="PC Control"
            android:parentActivityName=".MainActivity"> </activity>

        <activity android:name=".BackupActivity"
            android:label="Backup Devices"
            android:parentActivityName=".MainActivity"> </activity>
    </application>

</manifest>