<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackupActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="@dimen/fab_margin"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Boot Pi -->
            <EditText
                android:id="@+id/backupBootPiPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:paddingBottom="@dimen/fab_margin"
                android:hint="Backup Boot Pi Password"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/backupBootPiButton"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:minWidth="100dp"
                android:onClick="backupBootPiButtonClicked"
                android:text="backup boot pi"/>

            <TextView
                android:id="@+id/backupBootPiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fab_margin"
                android:textSize="@dimen/textSize"
                android:gravity="center"
                android:text="Never been Backed up"/>

            <!-- Light Pi -->
            <EditText
                android:id="@+id/backupLightPiPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_marginTop="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin"
                android:hint="Backup Light Pi Password"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/backupLightPiButton"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:minWidth="100dp"
                android:onClick="backupLightPiButtonClicked"
                android:text="backup light pi"/>

            <TextView
                android:id="@+id/backupLightPiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fab_margin"
                android:textSize="@dimen/textSize"
                android:gravity="center"
                android:text="Never been Backed up"/>

            <!-- Memory Stick -->
            <EditText
                android:id="@+id/backupMemoryStickPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_marginTop="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin"
                android:hint="Backup Memory stick Password"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/backupMemoryStickButton"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:minWidth="100dp"
                android:onClick="backupMemoryStickButtonClicked"
                android:text="backup memory stick"/>

            <TextView
                android:id="@+id/backupMemoryStickText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:gravity="center"
                android:text="Never been Backed up"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>